---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ProjectCard from '../components/ProjectCard.astro';

// Fetch all projects from the collection
const projects = await getCollection('projects');
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <BaseHead title="Projects" description="Some projects I build." />
  </head>
  <body class="flex flex-col min-h-full m-0 bg-gray-50">
    <Header />
    <main class="flex-grow max-w-5xl mx-auto px-4 py-8 w-full space-y-6">
      <h1 class="text-4xl font-bold text-center">Projects</h1>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {projects.map((project) => (
          <ProjectCard
            name={project.data.name}
            description={project.data.description}
            stack={project.data.stack}
            url={project.data.url}
            status={project.data.status}
          />
        ))}
      </div>
    </main>
    <Footer />
  </body>
</html>