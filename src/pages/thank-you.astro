---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title="Thank You | Your Website" description="Thank you for getting in touch!" />
  </head>
  <body class="flex flex-col min-h-screen bg-gray-50">
    <Header />
    <main class="flex-grow flex items-center justify-center px-4 py-12">
      <div class="text-center">
        <h1 class="text-4xl font-bold mb-4">Thank You!</h1>
        <p class="text-lg text-gray-600">We have received your message and will get back to you shortly.</p>
        <a
          href="/"
          class="mt-6 inline-block text-indigo-600 hover:text-indigo-700 text-lg font-medium"
        >
          Return to Home
        </a>
      </div>
    </main>
    <Footer />
  </body>
</html>
