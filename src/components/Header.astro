---
// src/components/Header.astro
import HeaderLink from './HeaderLink.astro';
---

<header class="p-4 bg-white shadow-md relative z-50"> <!-- Add z-50 here -->
  <nav class="flex items-center justify-between">
    <!-- Mobile Leftmost Home Link -->
    <h2 class="text-lg block">
      <a href="/" class="text-black hover:text-accent">Home</a>
    </h2>

    <!-- Desktop Navigation Links -->
    <div class="hidden md:flex space-x-4 ml-auto mr-auto">
      <HeaderLink href="/about">About</HeaderLink>
      <HeaderLink href="/projects">Projects</HeaderLink>
      <HeaderLink href="/photos">Projects</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/contact">Contact</HeaderLink>
    </div>

    <!-- Mobile Menu -->
    <div class="block md:hidden ml-auto relative">
      <button
        id="menu-toggle"
        aria-label="Toggle navigation menu"
        class="text-black hover:text-accent focus:outline-none"
      >
        <svg class="w-6 h-6" fill="none" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
      <div id="mobile-menu" class="hidden absolute top-full right-0 w-48 bg-white shadow-md rounded-lg z-50">
        <ul class="flex flex-col space-y-2 p-4">
          <li>
            <HeaderLink href="/about">About</HeaderLink>
          </li>
          <li>
            <HeaderLink href="/projects">Projects</HeaderLink>
          </li>
          <li>
            <HeaderLink href="/photos">Photos</HeaderLink>
          </li>
          <li>
            <HeaderLink href="/blog">Blog</HeaderLink>
          </li>
          <li>
            <HeaderLink href="/contact">Contact</HeaderLink>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.getElementById('menu-toggle');
    const menu = document.getElementById('mobile-menu');

    if (toggle && menu) {
      toggle.addEventListener('click', () => {
        menu.classList.toggle('hidden');
      });
    }
  });
</script>
